@using WebApplication1.Models.ViewModel
@model DepartmentViewModel

<h1>Department Details</h1>

<form method="post">
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td><input asp-for="Name" /></td>
        </tr>
        <tr>
            <th>Description</th>
            <td><input asp-for="Description" /></td>
        </tr>
    </table>
    <input type="submit" value="Save Changes" class="btn btn-warning" />
    <a asp-action="Index" class="btn btn-primary">Back to Listing</a>
</form>
